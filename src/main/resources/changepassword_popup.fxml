<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="226.0" prefWidth="382.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ChangepasswordPopup">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <GridPane>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="270.0" text="Password corrente:">
                           <padding>
                              <Insets right="5.0" />
                           </padding></Label>
                        <Label alignment="CENTER_RIGHT" prefHeight="23.0" prefWidth="156.0" text="Password nuova:" GridPane.rowIndex="1">
                           <padding>
                              <Insets right="5.0" />
                           </padding></Label>
                        <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <PasswordField fx:id="oldPasswordField" GridPane.columnIndex="1" />
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </GridPane>
                  <Label fx:id="responseLabel" alignment="CENTER" prefHeight="17.0" prefWidth="401.0" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin></Label>
               </children>
            </VBox>
         </center>
         <bottom>
            <Button fx:id="changeButton" mnemonicParsing="false" onAction="#changePassword" prefHeight="25.0" prefWidth="88.0" text="CAMBIA" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" />
               </BorderPane.margin></Button>
         </bottom>
         <top>
            <Label text="Cambia la password" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" top="20.0" />
               </BorderPane.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
