<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SignUpPopup">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <Label text="Come vuoi registrarti?" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="21.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="20.0" top="20.0" />
               </BorderPane.margin></Label>
         </top>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="TOP_CENTER" prefHeight="47.0" prefWidth="600.0">
                           <children>
                              <ToggleButton fx:id="utenteClienteButton" mnemonicParsing="false" onMouseClicked="#handleUtenteClienteToggleButtonEvent" text="REGISTRAMI COME CLIENTE">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="tipoUtente" />
                                 </toggleGroup>
                              </ToggleButton>
                              <ToggleButton fx:id="utenteResponsabileButton" mnemonicParsing="false" onMouseClicked="#handleUtenteResponsabileToggleButtonEvent" text="REGISTRAMI COME RESPONSABILE" toggleGroup="$tipoUtente" />
                           </children>
                        </HBox>
                        <BorderPane fx:id="tipoUtentePane" prefHeight="200.0" prefWidth="600.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin></BorderPane>
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </center>
         <bottom>
            <Button fx:id="confermaButton" disable="true" mnemonicParsing="false" onMouseClicked="#handleConfermaButtonAction" text="Crea nuovo utente" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" />
               </BorderPane.margin></Button>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
